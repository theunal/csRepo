@using MvcWebUI.Models
@model IEnumerable<AdminOrderModel>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mb-5 mt-4">
    <h1 style="text-align:center;">Siparişler</h1>
    <hr />


    <table class="table table-bordered table-striped">

        <thead>
            <tr>
                <th style="text-align:center;">ID</th>
                <th style="text-align:center;">Sipariş Numarası</th>
                <th style="text-align:center;">Sipariş Tarihi</th>
                <th style="text-align:center;">Sipariş Durumu</th>
                <th style="text-align:center;">Toplam</th>
            </tr>

        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center;">@item.Id</td>
                    <!-- action link gitmiyor-->
                    <td style="text-align:center;">@Html.ActionLink(item.OrderNumber, "Details", new { id = item.Id })</td>
                    <td style="text-align:center;">@item.OrderDate</td>
                    <td style="text-align:center;">

                        @if (Convert.ToInt32(item.OrderState) == 0)
                        {
                            <span style="color:red;">@item.OrderState</span>
                        }
                        else if (Convert.ToInt32(item.OrderState) == 1)
                        {
                            <span style="color: orange;">@item.OrderState</span>
                        }
                        else if (Convert.ToInt32(item.OrderState) == 2)
                        {
                            <span style="color: deepskyblue;">@item.OrderState</span>
                        }
                        else
                        {
                            <span style="color:green;">@item.OrderState</span>
                        }

                    </td>

                    <td style="text-align:center;">@item.Total.ToString("c")</td>
                </tr>
            }

        </tbody>


    </table>





</div>