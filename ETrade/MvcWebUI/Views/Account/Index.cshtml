
@using MvcWebUI.Models
@model IEnumerable<UserOrderModel>



@{
    ViewBag.Title = "Index";
}

<div class="container pb-5 mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2 style="text-align:center;">Siparişleriniz</h2>
            <hr />


            @if (Model.ToList().Count > 0)
            {

                <table class="table table-bordered table-striped mx-auto mt-4" style="width:65%;">
                    <thead>
                        <tr>
                            <th style="text-align:center;">Sipariş Numarası</th>
                            <th style="text-align:center;">Sipariş Tarihi</th>
                            <th style="text-align:center;">Toplam</th>
                            <th style="text-align:center;">Sipariş Durumu</th>

                        </tr>
                    </thead>




                    <tbody>


                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align:center;">
                                    @Html.ActionLink(item.OrderNumber, "/Details", new { id = item.Id })
                                </td>

                                <td style="text-align:center;">@item.OrderDate</td>
                                <td style="text-align:center;">@item.Total.ToString("c")</td>
                                <td style="text-align:center;">

                                    @if (Convert.ToInt32(item.OrderState) == 0)
                                    {
                                        <span style="color:orangered;">@item.OrderState</span>
                                    }
                                    else if (Convert.ToInt32(item.OrderState) == 1)
                                    {
                                        <span style="color: orange;">@item.OrderState</span>
                                    }
                                    else if (Convert.ToInt32(item.OrderState) == 2)
                                    {
                                        <span style="color: deepskyblue;">@item.OrderState</span>
                                    }
                                    else
                                    {
                                        <span style="color:green;">@item.OrderState</span>
                                    }


                                </td>
                            </tr>
                        }



                    </tbody>








                </table>



            }
            else
            {
                <div class="alert alert-dark alert-dismissible  fade show mx-auto" style="width:30%; text-align:center" role="alert">

                    <i class="fa fa-exclamation-circle" aria-hidden="true"></i> Ürün siparişi yok.
                    <button type="button" class="close" data-dismiss="alert">
                        <span>×</span>
                    </button>
                </div>
            }






        </div>
    </div>
</div>
